<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".PedidosActivity$PlaceholderFragment">

            <Button
                android:id="@+id/bExcluir"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Excluir"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <View
                android:id="@+id/divTop"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                app:layout_constraintTop_toBottomOf="@id/tVEmail" />

            <View
                android:id="@+id/divBottom"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000000"
                app:layout_constraintBottom_toTopOf="@id/bExcluir" />

            <TextView
                android:id="@+id/tVNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JoÃ£o da Silva"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tVEmail"/>

            <TextView
                android:id="@+id/tVEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="joao@hotmail.com"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tVNome"
                app:layout_constraintBottom_toTopOf="@id/divTop"/>

            <TextView
                android:id="@+id/tVEndereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                app:layout_constraintTop_toBottomOf="@id/divTop"
                app:layout_constraintBottom_toTopOf="@id/divBottom"/>

            <TextView
                android:id="@+id/tVTelefone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="992382832"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tVEmail"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>